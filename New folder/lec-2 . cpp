#include<iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int m = n/2 + 1;
    int i = 1;
    for(int i = 0 ; i<=m ; i++){
        for (int j = 1 ; j<=m-i ; j++){
            cout<<" ";
        }
        for(int k = 1 ; k<=2*i - 1 ; k++){
            cout<<"*";
        }
        cout << endl;
    }
        



}